# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# User Registration Secrets
ADMIN_REGISTRATION_SECRET=admin123
USER_REGISTRATION_SECRET=user123

# Database
DATABASE_URL=sqlite:///./storage/medshield.db

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# OpenAI API (Required for AI features)
OPENAI_API_KEY=your-openai-api-key

# Firebase Authentication (Optional)
# To enable Firebase authentication:
# 1. Create a Firebase project at https://console.firebase.google.com
# 2. Generate a service account key from Project Settings > Service Accounts
# 3. Save the JSON file and set the path below
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-service-account-key.json

# Firebase Client Configuration (Required if using Firebase)
# These values come from your Firebase project settings
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Application Environment
ENVIRONMENT=development